<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/pangaea"
    android:alpha="0.8">
    <!-- Layout for title -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
         >
        <TextView 
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>
        
    </RelativeLayout>
    <!-- layout with 4 worlds -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">
        <!-- split horizontal into two vertical layout -->
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- vertical view into two relativ layouts, each of these holds one button for a planet -->
            <!--  planet number 1 -->
            <RelativeLayout 
                android:layout_height="0dp"
                android:layout_width="fill_parent"
                android:layout_weight="1"  
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"          
                >
                <Button 
                    android:id="@+id/button_select_world_planet1"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="@string/app_name"
                    android:background="@drawable/pressable_button"/>
                
            </RelativeLayout>
            <!--  planet number 3 -->
            <RelativeLayout 
                android:layout_height="0dp"
                android:layout_width="fill_parent"
                android:layout_weight="1"  
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"      
                >
                <Button 
                    android:id="@+id/button_select_world_planet3"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="@string/app_name"
                    android:background="@drawable/pressable_button"/>
                
            </RelativeLayout>
            
        </LinearLayout>
        <!-- second horizontal split -->
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--  planet number 2 -->
            <RelativeLayout 
                android:layout_height="0dp"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"            
                >
                <Button 
                    android:id="@+id/button_select_world_planet2"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="@string/app_name"
                    android:background="@drawable/pressable_button"/>
                
            </RelativeLayout>
            <!-- planet number 4 -->
             <RelativeLayout 
                android:layout_height="0dp"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"            
                >
                <Button 
                    android:id="@+id/button_select_world_planet4"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="@string/app_name"
                    android:background="@drawable/pressable_button"/>
                
            </RelativeLayout>
            
        </LinearLayout>
        
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
         >
        <Button android:layout_height="fill_parent"
            android:id="@+id/button_select_world_random_generate"
            android:layout_width="wrap_content"
            android:text="@string/random_generate_world"
            android:background="@drawable/pressable_button"
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
    </RelativeLayout>
    

</LinearLayout>
