<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pangaea"
    android:alpha="0.8"
    android:orientation="vertical" >
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="4dp"
	     >
    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logged in as ..."
        android:background="@drawable/no_rounded_corner_black_white"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>
	<RelativeLayout
	    android:padding="4dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     >
    <Button
        android:id="@+id/button_play_online"
        android:layout_width="160dp"
        android:background="@drawable/pressable_button"
        android:layout_centerInParent="true"
        android:layout_height="50dp"
        android:text="Spiel suchen" />
    </RelativeLayout>
	<RelativeLayout
	    android:padding="4dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     >
    <Button
        android:id="@+id/button_create_Onlinegame"
        android:layout_width="160dp"
        android:background="@drawable/pressable_button"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:text="Spiel erstellen..." />
    </RelativeLayout>
	<RelativeLayout
	    android:padding="4dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     >
    <TextView
        android:id="@+id/textView_search_opponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gegner wird gesucht..."
        android:background="@drawable/no_rounded_corner_black_white"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible" />
    </RelativeLayout>
	<RelativeLayout
	    android:padding="4dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     >
    <Button
        android:id="@+id/button_logout"
        android:layout_width="160dp"
        android:layout_centerInParent="true"
        android:background="@drawable/pressable_button"
        android:layout_height="50dp"
        android:text="Logout" />
    </RelativeLayout>

</LinearLayout>