<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- Map Linear Layout! -->
    <LinearLayout
        android:id="@+id/map_holder_ll_simulation_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal" >
        
    </LinearLayout>
    <!-- hold buttons, time and points! -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/no_rounded_corner_black_white">
        <!-- speciesoverview -->
        <LinearLayout
        	android:layout_height="fill_parent"
        	android:layout_width="0dp"
        	android:layout_weight="1"
        	android:orientation="vertical" >
        	<Button 
        	    android:id="@+id/speciesoverview_button_simulation_layout"
        	    android:layout_width="fill_parent"
        	    android:layout_height="fill_parent"
        	    android:text="@string/app_name"
        	    android:background="@drawable/rounded_corner_black_white"/>
        
    	</LinearLayout>
    	<!-- Points and time -->
    	<LinearLayout
        	android:layout_height="fill_parent"
        	android:layout_width="0dp"
        	android:layout_weight="2"
        	android:orientation="vertical" >
        	<!-- Time -->
        	<RelativeLayout 
        	    android:layout_width="fill_parent"
        	    android:layout_height="0dp"
        	    android:layout_weight="1"
        	    android:paddingLeft="20dp"
        	    android:paddingRight="20dp" >
        	    <TextView 
        	        android:layout_width="wrap_content"
        	        android:layout_height="fill_parent"
        	        android:text="@string/app_name"
        	        android:layout_centerInParent="true"
        	        android:textColor="@color/black"
        	        android:textSize="14dp"/>
        	    
        	</RelativeLayout>
        	<!-- Points -->
        	<RelativeLayout 
        	    android:layout_width="fill_parent"
        	    android:layout_height="0dp"
        	    android:layout_weight="2"
        	     >
        	    <TextView 
        	        android:layout_width="wrap_content"
        	        android:layout_height="fill_parent"
        	        android:text="@string/app_name"
        	        android:textSize="20dp"
        	        android:textColor="@color/black"

        	        android:layout_centerInParent="true"/>
        	         	    
        	</RelativeLayout>
        
   		</LinearLayout>
   		<!-- Speciesupgrade -->
   		<LinearLayout
        	android:layout_height="fill_parent"
        	android:layout_width="0dp"
        	android:layout_weight="1"
        	android:orientation="vertical" >
        	<Button 
        	    android:layout_width="fill_parent"
        	    android:layout_height="fill_parent"
        	    android:text="@string/app_name"
        	    android:background="@drawable/rounded_corner_black_white"/>
        
        
    	</LinearLayout>
        
    </LinearLayout>
   
    
    

</LinearLayout>
