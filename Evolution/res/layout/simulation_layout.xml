<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- Frame Layout to hold the maps and soLayout! -->
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/map_holder_rl"
        android:layout_weight="5"
         >
      
       
	            
		       
    </FrameLayout>
    <!-- hold buttons, time and points! -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/no_rounded_corner_black_white">
        <!-- speciesoverview -->
        <LinearLayout
        	android:layout_height="fill_parent"
        	android:layout_width="0dp"
        	android:layout_weight="4"
        	android:orientation="vertical" >
        	<Button 
        	    android:id="@+id/speciesoverview_button_simulation_layout"
        	    android:layout_width="fill_parent"
        	    android:layout_height="fill_parent"
        	    android:text="@string/species_overview"
        	    android:textSize="18dp"
        	    android:background="@drawable/pressable_button"/>
        
    	</LinearLayout>
    	<!-- Points and time -->
    	<LinearLayout
        	android:layout_height="fill_parent"
        	android:layout_width="0dp"
        	android:layout_weight="4"
        	android:orientation="vertical"
        	 >
        	<!-- Time -->
        	<RelativeLayout 
        	    android:layout_width="fill_parent"
        	    android:layout_height="0dp"
        	    android:layout_weight="1"
        	    
        	    
        	     >
        	    <TextView 
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="@string/app_name"
        	        android:layout_centerInParent="true"
        	        android:textColor="@color/black"
        	        android:id="@+id/text_view_simulation_layout_time"
        	        android:textSize="16dp"/>
        	    
        	</RelativeLayout>
        	<!-- Points -->
        	<RelativeLayout 
        	    android:layout_width="fill_parent"
        	    android:layout_height="0dp"
        	   
        	    android:layout_weight="1"
        	     >
        	    <TextView 
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="@string/app_name"
        	        android:textSize="16dp"
        	        android:textColor="@color/black"
					android:id="@+id/text_view_simulation_layout_points"
        	        android:layout_centerInParent="true"/>
        	         	    
        	</RelativeLayout>
        
   		</LinearLayout>
   		<!-- current Population -->
   		<LinearLayout
   		    android:layout_width="0dp" 
   		    android:layout_height="fill_parent"
   		    android:orientation="vertical"
   		    android:layout_weight="4">
        	<RelativeLayout
        	    android:layout_height="0dp"
        	    android:layout_width="fill_parent"
        	    android:layout_weight="1">
	        	<TextView 
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_centerInParent="true"
	        	    android:id="@+id/text_view_simulation_layout_current_selection"
	        	    android:text="@string/world"
	        	    android:textColor="@color/black"
	        	    android:textSize="16dp"/>
        	</RelativeLayout>
        	<RelativeLayout
        	    android:layout_height="0dp"
        	    android:layout_width="fill_parent"
        	    android:layout_weight="1">
	        	<TextView 
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_centerInParent="true"
	        	    android:id="@+id/text_view_simulation_layout_current_pop"
	        	    android:text="0"
	        	    android:textColor="@color/black"
	        	    android:textSize="16dp"/>
        	</RelativeLayout>
   		    
   		</LinearLayout>
    	
    	
   		<!-- Speciesupgrade -->
   		<LinearLayout
        	android:layout_height="fill_parent"
        	android:layout_width="0dp"
        	android:layout_weight="4"
        	android:orientation="vertical" >
        	<Button 
        	    android:layout_width="fill_parent"
        	    android:layout_height="fill_parent"
        	    android:id="@+id/button_game_activity_species_skill"
        	    android:text="@string/skill_species"
        	    android:textSize="18dp"
        	    android:background="@drawable/pressable_button"/>
        
        
    	</LinearLayout>
        
    </LinearLayout>
   
    
    

</LinearLayout>
